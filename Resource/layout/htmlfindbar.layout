"resource/layout/htmlfindbar.layout"
{
	styles {

		CHTMLFindBar {
			minimum-height=50
			render_bg {
				0="fill( x0, y0, x1, y1, A2.Bar )"
			}
		}

		FindEntry {
			render_bg { }
		}

		label { font-family=medium font-size=16 font-weight=500 textcolor=Text.Notification font-style=regular }

		CloseButtonSm {
			image=graphics/none
			render_bg { 0="image( x0, y0, x1, y1, graphics/material/web/stop )" }
		}

		CloseButtonSm:hover {
			render_bg { 0="image( x0, y0, x1, y1, graphics/material/web/stop_hover )" }
		}

		NextButtonSm {
			textcolor=none
			render_bg {
				0="fill( x0, y0, x1, y1, Button.Hover )"
				1="image( x0 + 4, y0 + 8, x1, y1, graphics/material/nav/caret_down_onfocus )"
			}
		}

		PrevButtonSm {
			textcolor=none
			render_bg {
				0="fill( x0, y0, x1, y1, Button.Hover )"
				1="image( x0 + 4, y0 + 8, x1, y1, graphics/material/nav/caret_up_onfocus )"
			}
		}
	}

	layout {
		region { name=box y=10 width=max height=max margin-left=26 margin-right=26 }

		place { control=FindEntry 				region=box align=left width=max margin-right=84 end-right=Next }
		place { control=FindCount 				region=box align=right end-right=Next margin-right=20 margin-top=7 }
		place { control=Next,Previous 		region=box align=right height=30 width=20 spacing=10 margin-right=39 }

		place { control=Close 						region=box align=right width=14 height=14 y=8 }

		place { control="SearchThisPage" height=0 width=0 }
	}
}
